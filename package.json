{
  "name": "arch-lens-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Arch-Lens monorepo workspace for CLI, core engine, rules, and plugins.",
  "license": "MIT",
  "packageManager": "pnpm@8.15.4",
  "scripts": {
