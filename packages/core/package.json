{
  "name": "@arch-lens/core",
  "version": "0.0.0",
  "description": "Core engine for Arch-Lens rule orchestration.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@arch-lens/rules": "workspace:*",
    "fast-glob": "^3.3.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "arch-lens",
    "architecture",
    "monorepo",
    "rules-engine"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
