{
  "name": "@arch-lens/rules",
  "version": "0.0.0",
  "description": "Built-in rules and rule type definitions for Arch-Lens.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@arch-lens/plugins": "workspace:*"
  },
  "devDependencies": {
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "arch-lens",
    "rules",
    "architecture",
    "monorepo"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
